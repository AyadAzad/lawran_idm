{
  "manifest_version": 3,
  "name": "Lawran IDM Helper",
  "version": "1.0",
  "description": "Adds a download button to YouTube videos to use with Lawran IDM.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "http://localhost:5000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/watch*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_title": "Lawran IDM Helper"
  }
}